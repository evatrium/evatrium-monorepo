{
  "extends": "@evatrium/configs/ts/tsconfig.base.json",
  "include": [
    "./src",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".plop",
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@evatrium/configs": [
        "../../configs/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "vitest/globals",
      "node",
      "jsdom"
    ]
  }
}
